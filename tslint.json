{
    "rules": {
        "cyclomatic-complexity": [
            true,
            7
        ],
        "eofline": true,
        "import-spacing": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-line-length": [
            true,
            120
        ],
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "prefer-const": true,
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "restrict-plus-operands": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "ignore",
                    "typeLiterals": "ignore"
                },
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "ordered-imports": [
            true,
            {
                "grouped-imports": true,
                "import-sources-order": "case-insensitive",
                "named-imports-order": "lowercase-last"
            }
        ]
    }
}
